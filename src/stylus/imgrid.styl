.imgrid
  background-color: alpha($dark, 0.7)
  position: fixed
  top: 0
  right: 0
  bottom: 0
  left: 0
  width: 100%
  height: 100vh
  box-sizing: border-box
  padding: 50px
  transition: opacity 0.4s

  &-image
    max-width: 80vw
    max-height: 70vh
    margin: auto
    display: block

  &.is-hidden
    opacity: 0
    visibility: hidden
    top: -200%
    left: -200%

  &.is-visiable
    opacity: 1

  &-close
    position: absolute
    top: 20px
    right: 20px
    fill: $white
    cursor: pointer
    &:hover
      fill: $blue


  .icon
    width: 50px
    height: 50px